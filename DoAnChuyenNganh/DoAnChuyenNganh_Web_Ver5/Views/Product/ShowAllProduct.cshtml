                        @Html.PagedListPager(Model, pageNumber => Url.Action("ShowAllProduct", new { page = pageNumber }))
                    </ul>
                </div>
            </div>
            <!--articles-->
            <div class="row articles">
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6">
                        <img src="~/images/@item.Pic" alt="">
                        <div class="text">
                            <a href="@Url.Action("Details","Product",new { id = item.PrID})">
                                <span>
                                    @item.PrName
                                </span>
                            </a>
                            <p>
                                @item.Price.ToString("N0")
                            </p>
                            <a href="@Url.Action("AddToCart","Cart",new {id = item.PrID,URL=Request.Url.ToString()})">Đặt món</a>
