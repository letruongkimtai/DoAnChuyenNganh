@using PagedList.Mvc;
@model PagedList.IPagedList<DoAnChuyenNganh_Web_Ver5.Models.Product>
@{
    ViewBag.Title = "ShowAllProduct";
    Layout = "~/Views/_LayoutUser.cshtml";
}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-md-10 produti">
            </div>
            <div class="col-md-2 cart">
                @Html.Action("CartPartial", "Cart")
            </div>
        </div>
    </div>
</div>
