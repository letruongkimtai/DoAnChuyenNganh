@model IEnumerable<DoAnChuyenNganh_Web_Ver4.Models.Product>
@{
               

                ViewBag.Title = "Menu";
                Layout = "~/Views/_LayoutMenu.cshtml";
}


@foreach (var item in Model)
{
    <div class="col-md-4 col-sm-6">
        <img src="~/images/@item.Pic" alt="">
        <div class="text">
            <a href="@Url.Action("Details","Product",new { id = item.PrID})">
                <span>
                    @item.PrName
                </span>
            </a>
            <p>
                đ @item.Price
            </p>
            <a type="submit" style="border-style: outset; padding: 5px 7px 5px 7px; background: #c11b1b; background: #c11b1b;color: white;" href="@Url.Action("AddToCart","Order",new {id = item.PrID,URL=Request.Url.ToString()})">ORDER</a>
        </div>
    </div>
}
